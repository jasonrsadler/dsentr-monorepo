# Stage 1: build the Rust backend
FROM rust:1.91.1 as builder

WORKDIR /app

# Copy backend only
COPY backend ./backend

# Build release binary
WORKDIR /app/backend
RUN cargo build --release

# Stage 2: minimal runtime image
FROM debian:bookworm-slim

RUN apt-get update \
    && apt-get install -y ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY --from=builder /app/backend/target/release/dsentr-backend /usr/local/bin/dsentr-backend

ENV RUST_LOG=info
ENV PORT=10000

EXPOSE 10000

CMD ["/usr/local/bin/dsentr-backend"]
